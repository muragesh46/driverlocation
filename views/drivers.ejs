<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Drivers - Dispatch Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .driver-card {
            transition: transform 0.2s;
        }
        .driver-card:hover {
            transform: translateY(-2px);
        }
        .status-online {
            color: #28a745;
        }
        .status-offline {
            color: #dc3545;
        }
        .driver-avatar {
            width: 50px;
            height: 50px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.5em;
            font-weight: bold;
        }
    </style>
</head>
<body>
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
        <a class="navbar-brand" href="/">üöõ Dispatch Central</a>
        <div class="navbar-nav ms-auto">
            <a class="nav-link" href="/">Dashboard</a>
            <a class="nav-link" href="/create-route">Create Route</a>
        </div>
    </div>
</nav>

<div class="container mt-4">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Driver Management</h2>
        <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addDriverModal">
            + Add New Driver
        </button>
    </div>

    <!-- Stats Row -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <h3 class="text-primary"><%= drivers.length %></h3>
                    <p class="card-text">Total Drivers</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <h3 class="text-success"><%= drivers.filter(d => d.isActive).length %></h3>
                    <p class="card-text">Online Now</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <h3 class="text-warning"><%= drivers.filter(d => d.currentRoute).length %></h3>
                    <p class="card-text">On Route</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <h3 class="text-secondary"><%= drivers.filter(d => !d.isActive).length %></h3>
                    <p class="card-text">Offline</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Drivers List -->
    <div class="row">
        <% if (drivers.length === 0) { %>
            <div class="col-12">
                <div class="card">
                    <div class="card-body text-center py-5">
                        <h4 class="text-muted">No Drivers Added Yet</h4>
                        <p class="text-muted">Add your first driver to start creating routes and tracking deliveries.</p>
                        <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addDriverModal">
                            Add First Driver
                        </button>
                    </div>
                </div>
            </div>
        <% } else { %>
            <% drivers.forEach(driver => { %>
                <div class="col-md-6 col-lg-4 mb-3">
                    <div class="card driver-card h-100">
                        <div class="card-body">
                            <div class="d-flex align-items-start mb-3">
                                <div class="driver-avatar bg-primary text-white me-3">
                                    <%= driver.name.charAt(0).toUpperCase() %>
                                </div>
                                <div class="flex-grow-1">
                                    <h5 class="card-title mb-1"><%= driver.name %></h5>
                                    <p class="card-text text-muted small mb-2">
                                        üìû <%= driver.phone %>
                                    </p>
                                    <span class="badge bg-<%= driver.isActive ? 'success' : 'secondary' %>">
                                            <%= driver.isActive ? 'üü¢ Online' : 'üî¥ Offline' %>
                                        </span>
                                </div>
                            </div>

                            <!-- Current Route Info -->
                            <% if (driver.currentRoute) { %>
                                <div class="alert alert-info py-2 px-3 mb-3">
                                    <small>
                                        <strong>Current Route:</strong><br>
                                        <%= driver.currentRoute.name %><br>
                                        <span class="text-muted">
                                                <%= driver.currentRoute.stops ? driver.currentRoute.stops.length : 0 %> stops
                                            </span>
                                    </small>
                                </div>
                            <% } else { %>
                                <div class="alert alert-light py-2 px-3 mb-3">
                                    <small class="text-muted">
                                        No active route assigned
                                    </small>
                                </div>
                            <% } %>

                            <!-- Driver Actions -->
                            <div class="d-flex gap-2">
                                <button class="btn btn-sm btn-outline-primary flex-grow-1"
                                        onclick="viewDriverDetails('<%= driver._id %>')">
                                    View Details
                                </button>
                                <button class="btn btn-sm btn-outline-secondary"
                                        onclick="editDriver('<%= driver._id %>')">
                                    ‚úèÔ∏è
                                </button>
                            </div>
                        </div>
                        <div class="card-footer bg-transparent">
                            <small class="text-muted">
                                Driver ID: <%= driver._id.toString().slice(-6) %>
                            </small>
                        </div>
                    </div>
                </div>
            <% }); %>
        <% } %>
    </div>
</div>

<!-- Add Driver Modal -->
<div class="modal fade" id="addDriverModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add New Driver</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form action="/api/drivers" method="POST">
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="driverName" class="form-label">Full Name</label>
                        <input type="text" class="form-control" id="driverName" name="name"
                               placeholder="e.g., John Smith" required>
                    </div>
                    <div class="mb-3">
                        <label for="driverPhone" class="form-label">Phone Number</label>
                        <input type="tel" class="form-control" id="driverPhone" name="phone"
                               placeholder="e.g., (555) 123-4567" required>
                    </div>
                    <div class="alert alert-info">
                        <small>
                            <strong>Note:</strong> Driver will receive login credentials via SMS to access the mobile app.
                        </small>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Add Driver</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Driver Details Modal -->
<div class="modal fade" id="driverDetailsModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Driver Details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div id="driverDetailsContent">
                    <!-- Content loaded via JavaScript -->
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
<script src="/socket.io/socket.io.js"></script>
<script>
    const socket = io();

    // Real-time driver status updates
    socket.on('driver-location', (data) => {
        updateDriverStatus(data.driverId, true);
    });

    function updateDriverStatus(driverId, isOnline) {
        const statusBadges = document.querySelectorAll(`[data-driver-id="${driverId}"] .badge`);
        statusBadges.forEach(badge => {
            badge.className = `badge bg-${isOnline ? 'success' : 'secondary'}`;
            badge.textContent = isOnline ? 'üü¢ Online' : 'üî¥ Offline';
        });
    }

    function viewDriverDetails(driverId) {
        const modal = new bootstrap.Modal(document.getElementById('driverDetailsModal'));
        const content = document.getElementById('driverDetailsContent');

        content.innerHTML = `
                <div class="text-center">
                    <div class="spinner-border" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                </div>
            `;

        modal.show();

        // In a real app, you'd fetch driver details from API
        setTimeout(() => {
            content.innerHTML = `
                    <div class="row">
                        <div class="col-md-6">
                            <h6>Basic Information</h6>
                            <p><strong>Driver ID:</strong> ${driverId.slice(-6)}</p>
                            <p><strong>Status:</strong> <span class="badge bg-success">Online</span></p>
                            <p><strong>Last Location Update:</strong> 2 minutes ago</p>
                        </div>
                        <div class="col-md-6">
                            <h6>Today's Activity</h6>
                            <p><strong>Routes Completed:</strong> 2</p>
                            <p><strong>Stops Delivered:</strong> 12</p>
                            <p><strong>Hours Active:</strong> 6h 32m</p>
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-12">
                            <h6>Recent Routes</h6>
                            <div class="list-group">
                                <div class="list-group-item">
                                    <div class="d-flex justify-content-between">
                                        <span>Morning Deliveries - Zone A</span>
                                        <small class="text-muted">Completed 2 hours ago</small>
                                    </div>
                                </div>
                                <div class="list-group-item">
                                    <div class="d-flex justify-content-between">
                                        <span>Afternoon Route - Downtown</span>
                                        <small class="text-success">In Progress</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                `;
        }, 1000);
    }

    function editDriver(driverId) {
        alert(`Edit driver functionality would open here for driver: ${driverId}`);
    }

    // Auto-refresh driver status every 30 seconds
    setInterval(() => {
        location.reload();
    }, 30000);
</script>
</body>
</html>